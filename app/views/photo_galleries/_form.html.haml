= form_for @photo_gallery, html: { class: "form form-horizontal photo_gallery" } do |f|
  .form-group
    = f.label :name, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :name, class: 'form-control', required: true
    = f.error_span(:name)
  .form-group
    = f.label :describtion, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :describtion, class: 'form-control', required: true
    = f.error_span(:describtion)
  .form-group
    = f.label :pictures, class: 'control-label col-lg-2'
    .col-lg-10
      = f.file_field :pictures, multiple: true, class: 'form-control', required: true
    = f.error_span(:pictures)
  .form-group
    .col-lg-offset-2.col-lg-10
      = f.submit nil,class: 'btn btn-primary'
      = link_to t('.cancel', :default => t("helpers.links.cancel")), photo_galleries_path, :class => 'btn btn-default'
