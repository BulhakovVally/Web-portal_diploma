- model_class = PhotoGallery
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @photo_gallery.name
%p
  %strong= model_class.human_attribute_name(:describtion) + ':'
  %br
  = @photo_gallery.describtion
%p
  %strong= model_class.human_attribute_name(:pictures) + ':'
  %br
  - @photo_gallery.pictures.each do |p|
    = image_tag p.url, class: "img-rounded", width: "140px"


= link_to t('.back', :default => t("helpers.links.back")), photo_galleries_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_photo_gallery_path(@photo_gallery), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), photo_gallery_path(@photo_gallery), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
