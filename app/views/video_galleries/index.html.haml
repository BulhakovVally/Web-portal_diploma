- model_class = VideoGallery
.page-header
  %h1=t 'Видео галерея', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:describtion)
      
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @video_galleries.each do |video_gallery|
      %tr
        %td= link_to video_gallery.id, video_gallery_path(video_gallery)
        %td= link_to video_gallery.name, video_gallery_path(video_gallery)
        %td= video_gallery.describtion
        %td=l video_gallery.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_video_gallery_path(video_gallery), :class => 'btn btn-default btn-xs'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), video_gallery_path(video_gallery), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_video_gallery_path, :class => 'btn btn-primary'
