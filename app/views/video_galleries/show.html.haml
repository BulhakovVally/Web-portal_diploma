- model_class = VideoGallery
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @video_gallery.name
%p
  %strong= model_class.human_attribute_name(:describtion) + ':'
  %br
  = @video_gallery.describtion
%p
  %strong= model_class.human_attribute_name(:videos) + ':'
  %br
  = video_player({:file => @video_gallery.attachment.url}, {:width => 640, :height => 480, :id => @video_gallery.id})


= link_to t('.back', :default => t("helpers.links.back")), video_galleries_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_video_gallery_path(@video_gallery), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), video_gallery_path(@video_gallery), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
